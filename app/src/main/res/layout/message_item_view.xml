<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePicMessages"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="0dp"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/usernameMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profilePicMessages"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Chinmoy Chakraborty"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/messageNewMessages"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/profilePicMessages"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/usernameMessages"
        android:text="Hii there!"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/profilePicMessages"
        android:background="#494c52"/>

</RelativeLayout>